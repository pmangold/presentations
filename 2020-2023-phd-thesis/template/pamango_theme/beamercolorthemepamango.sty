\mode<presentation>

% Named colors

\definecolor{amaranth}{rgb}{0.9, 0.17, 0.31}
\definecolor{brinkpink}{rgb}{0.98, 0.38, 0.5}
\definecolor{byzantium}{rgb}{0.44, 0.16, 0.39}


% Custom colors

\colorlet{headerline}{brinkpink}
\colorlet{headerlinepastel}{headerline!60}
\colorlet{headerlinepale}{headerline!10}
\colorlet{titlebox}{amaranth}
\colorlet{blockalert}{amaranth}
\colorlet{blockalertpale}{blockalert!10}
\colorlet{blockexample}{byzantium}
\colorlet{blockexamplepale}{blockexample!10}

% Set colors to variables

\setbeamercolor{block title}{fg=white, bg=headerline}
\setbeamercolor{block body}{fg=black, bg=headerlinepale}
\setbeamercolor{block title alerted}{fg=white, bg=blockalert}
\setbeamercolor{block body alerted}{fg=black, bg=blockalertpale}
\setbeamercolor{block title example}{fg=white, bg=blockexample}
\setbeamercolor{block body example}{fg=black, bg=blockexamplepale}

\setbeamercolor{background canvas}{bg=white}
\setbeamercolor{title}{fg=black}
\setbeamercolor{sectionpagetitle}{fg=black}
\setbeamercolor{frametitle}{fg=black}
\setbeamercolor{framesubtitle}{fg=black}
\setbeamercolor{normal text}{fg=black}
\setbeamercolor{section in toc}{fg=black}
\setbeamercolor{section in toc shaded}{fg=black}
\setbeamercolor{item}{fg=black}
\setbeamercolor{subitem}{fg=black}
\setbeamercolor{subsubitem}{fg=black}
\setbeamercolor{description item}{fg=black}
\setbeamercolor{caption}{fg=black}
\setbeamercolor{caption name}{fg=black}
\setbeamercolor{author in head/foot}{fg=amaranth}

\mode<all>