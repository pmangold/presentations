\newcommand{\mkbibblock}[1]{
  \@tempdima=\linewidth%  largeur boite interne
  \advance\@tempdima by -2px
  \begin{beamercolorbox}[wd=\linewidth, sep=1px, leftskip=0em]{block body alerted border}
    \begin{beamercolorbox}[wd=\@tempdima, sep=0.5em]{block body alerted}
    \begin{minipage}[t]{0.01\linewidth}
      \centering
      \vspace{0pt}
      \includegraphics[width=4\linewidth]{/usr/local/share/texmf/tex/latex/beamer-pamango-blank/images//article.pdf}
    \end{minipage}%
    % \hfill
    \begin{minipage}[t]{0.9\linewidth}
      #1
    \end{minipage}%
    \end{beamercolorbox}
  \end{beamercolorbox}
}



\DeclareCiteCommand{\longcite}[\mkbibblock]{
  \begin{itemize}[itemsep=0.5em]
    \setlength{\itemindent}{0em}
    \footnotesize
    }{
    \item[--] \printnames[firstfirstinit-last]{author}, \textit{\printfield{title}}, \printfield{year}.
%      \iffieldundef{journal}
%      {}
%      {, \printfield{journal}}%
%      .
    }{}{
    \end{itemize}
}%


\newcommand{\mksmallbibblock}[1]{
  \@tempdima=\linewidth%  largeur boite interne
  \advance\@tempdima by -2px
  \begin{beamercolorbox}[wd=\linewidth, sep=1px, leftskip=0em]{block body alerted border}
    \begin{beamercolorbox}[wd=\@tempdima, sep=0.5em]{block body alerted}
    \begin{minipage}[t]{0.02\linewidth}
      \centering
      \vspace{-1pt}
      \includegraphics[width=\linewidth]{/usr/local/share/texmf/tex/latex/beamer-pamango-blank/images/article.pdf}
    \end{minipage}%
    % \hfill
    \begin{minipage}[t]{0.93\linewidth}
      #1
    \end{minipage}%
    \end{beamercolorbox}
  \end{beamercolorbox}
}



\DeclareCiteCommand{\smalllongcite}[\mksmallbibblock]{
  \begin{itemize}[itemsep=0.5em]
    \setlength{\itemindent}{0em}
    \footnotesize
    }{
    \item[--] \printnames[firstfirstinit-last]{author}, \textit{\printfield{title}}, \printfield{year}%
      \iffieldundef{journal}
      {}
      {, \printfield{journal}}%
      .
    }{}{
    \end{itemize}
}%


